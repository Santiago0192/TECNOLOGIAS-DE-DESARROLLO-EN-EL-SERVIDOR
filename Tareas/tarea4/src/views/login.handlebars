<div id="container" ></div>
    <h2 id="Title">Login</h2>
    <form method="post" action="">
        <label class="label" for="username">Usuario:</label>
        <input type="email" id="email" name="email" required><br>
        <label class="label" for="password">Contrasena:</label>
        <input type="password" id="password" name="password" required><br>
        <button id="searchButton" onclick="iniciarSesion()" style=" margin-top: 10px;">Iniciar sesion</button>
    </form>
    <p style="color: rgb(117, 117, 117);">No tienes una cuenta? <a href="http://localhost:3000/auth/signup" style="color: rgb(187, 187, 187);">Registrate</a></p>
</div>

<script>
    function iniciarSesion() {
        var email = document.getElementById('email').value;
        var password = document.getElementById('password').value;

        var datosUsuario = {
            email: email,
            password: password
        };

        fetch('http://localhost:3000/auth/login', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(datosUsuario)
        })
        .then(response => {
            if (!response.ok) {
                throw new Error(`Error de red - ${response.status}`);
            }
            return response.json();
        })
        .then(data => {
            console.log('Usuario Logeado:', data);
            const token = data.token;
            const queryParams = new URLSearchParams({ token });

            window.location.href = `http://localhost:3000/?${queryParams.toString()}`;
        })
        .catch(error => {
            console.error('Error al registrar usuario:', error);
        });
    }
</script>